#name : C GCD: Dispatch Source (Timer)
#key : dispatch_source timer
# --
dispatch_source_t timer = dispatch_source_create(DISPATCH_SOURCE_TYPE_TIMER, 0, 0, ${1:dispatchQueue});
dispatch_source_set_timer(timer, DISPATCH_TIME_NOW, ${2:intervalInSeconds} * NSEC_PER_SEC, ${3:leewayInSeconds} * NSEC_PER_SEC);
dispatch_source_set_event_handler(timer, ^{
    ${4:code to be executed when timer fires}
});
dispatch_resume(timer);